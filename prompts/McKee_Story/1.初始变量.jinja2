# 故事基本设定
作者流派 - {{ style }}  # 作者的写作风格,如现实主义、浪漫主义等
写作类型 - {{ genre }}     # 作品体裁,如短篇小说、长篇小说等
标题设定 - {{ title }}          # 作品标题

# 主角设定
角色名 - {{ name_character }}      # 主角姓名 
角色年龄 - {{ age_character }}     # 主角年龄
角色职业 - {{ job_character }} # 主角职业
角色动机 - {{ inner_confilt_character }} # 主角的行动动机和目标

# 冲突设定
内在冲突 - {{ inner_confilt_character }}   # 主角内心的矛盾和挣扎
外在冲突 - {{ outer_confilt_character }}   # 主角面临的外部困难和对抗

# 故事环境
世界背景 - {{ world_setting }}       # 故事发生的时代背景和环境

# 配角设定
次要角色 - {{ supporting_character_name }}  # 重要配角姓名
次要角色年龄 - {{ supporting_character_age }} # 配角年龄
次要角色工作 - {{ supporting_character_occupation }} # 配角职业
主角和配角关系 - {{ character_relationship }} # 主配角之间的关系

# 其他设定
故事长度 - {{ story_length }}        # 计划写作字数
角色头像 - {{ character_appearance }} # 主角外貌描写
